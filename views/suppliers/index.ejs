<%- include('../partials/header', { title: 'Nhà cung cấp' }) %>

<div class="d-flex justify-content-between mb-3">
  <h2>Danh sách nhà cung cấp</h2>
  <a href="/suppliers/add" class="btn btn-success">Thêm mới</a>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Tên</th>
      <th>Địa chỉ</th>
      <th>Số điện thoại</th>
      <th>Hành động</th>
    </tr>
  </thead>
  <tbody>
    <% suppliers.forEach(s => { %>
      <tr>
        <td><%= s.name %></td>
        <td><%= s.address %></td>
        <td><%= s.phone %></td>
        <td>
          <a href="/suppliers/edit/<%= s._id %>" class="btn btn-primary btn-sm">Sửa</a>
          <form action="/suppliers/delete/<%= s._id %>" method="POST" style="display:inline-block;">
            <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>
